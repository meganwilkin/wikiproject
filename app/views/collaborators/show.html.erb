<h1>Collaborators for Wiki: <%= @wiki.title%></h1>

<%= form_tag({:controller => "collaborators", :action => "create"}, {:method => "post"}) do %>
<%= hidden_field_tag(:wiki_id, @wiki.id) %>
    <table class="table">
      <caption>Collaborators for wiki</caption>
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>ID</th>
          <th>Collaborate</th>
        </tr>
      </thead>
      <tbody>
        <% @collaborators.each do |collaborator| %>
              <tr>
              <td><%= collaborator.username %></td>
              <td><%= collaborator.email %></td>
              <td><%= collaborator.id %></td>
              <td><%= check_box_tag("collaborator_ids[]", value=collaborator.id, checked = true) %></td>
              </tr>
        <% end %>
        <% @users.each do |user| %>
              <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.id %></td>
              <td><%= check_box_tag("collaborator_ids[]",value=user.id, checked = false) %></td>
              </tr>
        <% end %>
       </tbody>
     </table>
     <button type="submit" class="btn btn-default">Save Collaborators</button>
     <%#= f.submit "Save Collaborators", class: 'btn btn-success' %>
<% end %>
</div>
